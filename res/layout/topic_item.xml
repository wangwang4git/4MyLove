<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#00FAFAFA"
    android:minHeight="60dip"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        
        <ImageView android:id="@+id/topic_tag"
			android:layout_width="20dip"
			android:layout_height="20dip"
			android:layout_centerVertical="true"
			android:scaleType="centerInside"
			android:layout_marginLeft="2dip"
			android:visibility="invisible" />

        <TextView
            android:id="@+id/topic_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/topic_tag"
            android:layout_marginLeft="2dip"
            android:layout_marginRight="20dip"
            android:minHeight="50dip"
            android:textColor="#FF000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/topic_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/topic_title"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dip"
            android:background="#FFFAED9E"
            android:textColor="#FF888888"
            android:textSize="15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFAF8E3"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/topic_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:textColor="#FF888888"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/topic_datetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dip"
            android:textColor="#FF888888"
            android:textSize="10sp" />
    </RelativeLayout>

</LinearLayout>