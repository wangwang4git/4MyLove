<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="match_parent"
	android:layout_height="match_parent" android:layout_gravity="top"
	android:gravity="center_horizontal" android:background="#FFFAFAF7">

	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:gravity="center"
		android:background="@drawable/mine_titlebar_bg">
		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_gravity="center"
			android:text="@string/mine_board_text" android:textColor="#FF7B7B7B"
            android:textSize="20sp"  />
	</LinearLayout>

	<com.bbs.whu.xlistview.XListView
		android:id="@+id/collectboard_listview" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:cacheColorHint="#00000000"
		android:divider="@drawable/collect_board_item_segment"
		android:dividerHeight="10dip">
	</com.bbs.whu.xlistview.XListView>

	<ImageView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_marginTop="0dip"
		android:src="@drawable/listview_tail" />

</LinearLayout>